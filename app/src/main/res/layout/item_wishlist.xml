<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:id="@+id/contenedor"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#FFEB3B"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"


        app:layout_constraintTop_toTopOf="@id/tvNombreProducto"
        app:layout_constraintBottom_toBottomOf="@id/tvCalif"


        />

    <TextView
        android:id="@+id/tvIdProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="98dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"

        />

    <TextView
        android:id="@+id/tvNombreProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRODUCTO NOVEDOSO"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="98dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"

        />

    <TextView
        android:id="@+id/tvPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRECIO $$$$"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="279dp"
        app:layout_constraintTop_toBottomOf="@id/tvNombreProducto"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tvDescrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DESCRIPCION BREVE DEL PRODUCTO "
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="363dp"
        app:layout_constraintTop_toBottomOf="@id/tvPrecio"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/tvCalif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calificacion 4.2"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="431dp"
        app:layout_constraintTop_toBottomOf="@id/tvDescrip"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        />



</androidx.constraintlayout.widget.ConstraintLayout>