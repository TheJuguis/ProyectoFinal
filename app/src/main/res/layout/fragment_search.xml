<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchFragment">

    <!-- TODO: Update blank fragment layout -->



    <View
        android:id="@+id/barraSuperior"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/amarillito"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvtitulo"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"

        />

    <View
        android:id="@+id/contenedor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#A5A5A5"
        app:layout_constraintTop_toBottomOf="@id/etBuscar"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintBottom_toBottomOf="parent"

        />
    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IR"
        app:layout_constraintTop_toBottomOf="@id/tvtitulo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/etBuscar"
        android:layout_marginTop="30dp"
        android:background="@color/amarillito"
        android:layout_marginRight="20dp"
        android:textColor="@color/black"

        />

    <EditText
        android:id="@+id/etBuscar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvtitulo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnBuscar"
        android:hint="Ingresa ID de producto"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/fiusha"




        />

    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="97dp"
        app:layout_constraintTop_toTopOf="@id/contenedor"
        app:layout_constraintLeft_toLeftOf="@id/contenedor"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"

        android:textColor="@color/fiusha"
        app:layout_constraintRight_toRightOf="@id/contenedor"/>
    <TextView
        android:id="@+id/tvCal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="97dp"
        app:layout_constraintTop_toBottomOf="@id/tvNombre"
        app:layout_constraintLeft_toLeftOf="@id/contenedor"
        android:layout_marginTop="20dp"

        android:textColor="@color/fiusha"
        app:layout_constraintRight_toRightOf="@id/contenedor"/>
    <TextView
        android:id="@+id/tvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="97dp"
        app:layout_constraintTop_toBottomOf="@id/tvCal"
        app:layout_constraintLeft_toLeftOf="@id/contenedor"
        android:layout_marginTop="20dp"

        android:textColor="@color/fiusha"
        app:layout_constraintRight_toRightOf="@id/contenedor"/>
    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="97dp"
        app:layout_constraintTop_toBottomOf="@id/tvId"
        app:layout_constraintLeft_toLeftOf="@id/contenedor"
        android:layout_marginTop="20dp"

        android:textColor="@color/fiusha"
        app:layout_constraintRight_toRightOf="@id/contenedor"/>
    <TextView
        android:id="@+id/tvDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""

        app:layout_constraintTop_toBottomOf="@id/tvPrice"
        app:layout_constraintLeft_toLeftOf="@id/contenedor"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"

        android:textColor="@color/fiusha"
        app:layout_constraintRight_toRightOf="@id/contenedor"/>

    <TextView
        android:id="@+id/tvtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUSCAR"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="104dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="200dp"
        android:textSize="40dp"
        android:textColor="@color/black"/>
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar"
        app:layout_constraintTop_toBottomOf="@id/tvtitulo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/etBuscar"
        android:layout_marginTop="90dp"

        android:background="#00FFEB3B"

        android:layout_marginRight="25dp"
        android:textColor="@color/amarillito"

        />

    <ImageView
        android:id="@+id/ivProductSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDes"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tvPrice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="97dp"
        app:layout_constraintTop_toBottomOf="@id/tvId"
        app:layout_constraintLeft_toLeftOf="@id/contenedor"
        android:layout_marginRight="45dp"
        android:layout_marginTop="20dp"

        android:textColor="@color/fiusha"
        app:layout_constraintRight_toRightOf="@id/contenedor"/>


</androidx.constraintlayout.widget.ConstraintLayout>